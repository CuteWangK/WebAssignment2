@model IEnumerable<Assignment2.Models.GameCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Game Category</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
            @Html.ActionLink(item.Name, "Index", "Games", new { GameCategory = item.Name }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p >
    @Html.ActionLink("Add New Category", "Create", null, new { style = "text-decoration: none; color: black" })
</p>

